<div class="container">
  <div class="row">
    <h1>Create New Review</h1>
  </div>

  <%= form_with model: @review, url: user_reviews_path, method: :post do |f| %>

    <div class="form-group">
      <%= f.label :book %>
      <%= f.text_field :book, class: 'form-control' %>
      
    </div>

    <div class="form-group">
      <%= f.label :rating %>
      <%= f.number_field :rating, min: 0, max: 5, step: 1 %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>

    <%= f.submit class: 'btn btn-primary' %>
  <% end %>

</div>