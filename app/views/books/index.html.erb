<div class="container">
  <div class="row">
    <% @books.each do |book| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <img src="/placeholder.png" class="card-img-top" alt="Placeholder image" style="height: 200px; object-fit: cover;">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <h5 class="card-title mb-0"><%= link_to book.title, book %></h5>
              <p class="mb-0"><%= book.author %></p>
            </div>
            <span class="badge bg-primary mt-2"><%= book.genre %></span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
