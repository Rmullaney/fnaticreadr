    <% if params[:source] == 'seeded_books' %>
      <div class="flex flex-col space-y-2">
        <%= form.label :rating, "Rating above", class: "text-sm font-medium text-slate-700" %>
        <%= form.number_field :rating, in: 0..5, step: 0.5, value: params[:rating] || @rating_filt, class: "w-full text-sm border border-slate-300 rounded-full px-4 py-2 transition duration-300 focus:outline-none focus:ring-2 focus:ring-violet-300" %>
      </div>

      <div class="flex flex-col space-y-2">
        <%= form.label :genre, "Genre", class: "text-sm font-medium text-slate-700" %>
        <%= form.text_field :genre, value: params[:genre] || @genre_filt, class: "w-full text-sm border border-slate-300 rounded-full px-4 py-2 transition duration-300 focus:outline-none focus:ring-2 focus:ring-violet-300" %>
      </div>
    <% end %>