<div class="flex h-screen">
  <!-- Left Column -->
  <div class="w-1/4 h-full px-4 pt-8 shadow-r shadow-sm">
    <%= form_with url: books_path, method: :get, local: true, class: "space-y-4" do |form| %>
      <div class="flex flex-col space-y-2">
        <%= form.label :query, "Search", class: "text-sm font-medium text-slate-700" %>
        <%= form.text_field :query, class: "w-full bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-300 rounded-full px-4 py-2 transition duration-300 focus:outline-none focus:ring-2 focus:ring-violet-300 focus:border-violet-300", placeholder: "Search books..." %>
      </div>

      <div class="flex flex-col space-y-2">
        <%= form.label :sort, "Sort by", class: "text-sm font-medium text-slate-700" %>
        <%= form.select :sort, @sorts, { selected: @sort_filt }, { class: "w-full text-sm border border-slate-300 rounded-full px-4 py-2 transition duration-300 focus:outline-none focus:ring-2 focus:ring-violet-300" } %>
      </div>

      <div class="flex flex-col space-y-2">
        <%= form.label :rating, "Rating above", class: "text-sm font-medium text-slate-700" %>
        <%= form.number_field :rating, in: 0..5, step: 0.5, value: @rating_filt, class: "w-full text-sm border border-slate-300 rounded-full px-4 py-2 transition duration-300 focus:outline-none focus:ring-2 focus:ring-violet-300" %>
      </div>

      <div class="flex flex-col space-y-2">
        <%= form.label :genre, "Genre", class: "text-sm font-medium text-slate-700" %>
        <%= form.text_field :genre, class: "w-full text-sm border border-slate-300 rounded-full px-4 py-2 transition duration-300 focus:outline-none focus:ring-2 focus:ring-violet-300" %>
      </div>

      <div class="flex flex-col space-y-2">
        <%= form.label :source, "Source", class: "text-sm font-medium text-slate-700" %>
        <%= form.select :source, options_for_select([['Google Books', 'google_books'], ['Seeded Books', 'seeded_books']], selected: params[:source]), { include_blank: false }, { class: "w-full text-sm border border-slate-300 rounded-full px-4 py-2 transition duration-300 focus:outline-none focus:ring-2 focus:ring-violet-300" } %>
      </div>

      <div>
        <%= form.submit "Filter Books", class: "w-full bg-violet-500 text-white py-2 px-4 rounded-full text-sm font-medium hover:bg-violet-600 transition duration-300 focus:outline-none focus:ring-2 focus:ring-violet-300" %>
      </div>
    <% end %>
  </div>

  <!-- Right Column -->
  <div class="w-3/4 overflow-y-scroll grid grid-cols-1 px-10 pt-8">
    <% if @books.any? %>
      <%= render partial: 'book_search_card', collection: @books, as: :book %>

      <!-- Pagination -->
      <div class="pagination-buttons">
        <% if params[:page].to_i > 1 %>
          <%= link_to "Previous Page", books_path(source: params[:source], query: params[:query], page: params[:page].to_i - 1), class: "btn btn-primary" %>
        <% end %>
        <% if @has_more_pages %>
          <%= link_to "Next Page", books_path(source: params[:source], query: params[:query], page: params[:page].to_i + 1), class: "btn btn-secondary" %>
        <% end %>
      </div>
    <% else %>
      <p class="alert alert-info">No books found. Try adjusting your filters or search keywords.</p>
    <% end %>
  </div>

</div>
