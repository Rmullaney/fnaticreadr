<div class="max-w-4xl mx-auto mt-10 p-6 bg-white shadow-md rounded-lg">
  <div class="text-center mb-6">
    <h1 class="text-3xl font-semibold font-kalnia mb-6">Recommend "<%= @book.title %>" to a Friend</h1>
  </div>

  <%= form_with model: @notification, url: create_book_recommendation_path, method: :post, class: "space-y-6" do |form| %>
    <div class="mb-6">
      <%= form.label :receiver_id, "Select a Friend", class: "text-lg font-medium text-gray-700" %>
      <%= form.collection_select :receiver_id, current_user.friends, :id, 
        lambda { |friend| "#{friend.first} #{friend.last}" }, 
        { prompt: "Choose a Friend" }, 
        { class: "w-full text-sm border border-slate-300 rounded-full px-4 py-2 transition duration-300 focus:outline-none focus:ring-2 focus:ring-violet-300" } %>
    </div>

    <div class="mb-6">
      <%= form.label :message, "Message (Optional)", class: "text-lg font-medium text-gray-700" %>
      <%= form.text_area :message, rows: 3, class: "w-full bg-white border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-violet-500" %>
    </div>

    <%= form.hidden_field :book_id, value: @book.id %>

    <div class="text-center">
      <%= form.submit "Send Recommendation", class: "bg-violet-500 text-white py-2 px-6 rounded-full text-lg font-medium hover:bg-violet-400 transition duration-300" %>
    </div>
  <% end %>
</div>
