<div >
  <% @reviews.each do |review| %>
    <p><%= review.user %></p>
    <p><%= review.book %></p>
    <p><%= review.rating %></p>
    <p><%= review.description %></p>

    <%= link_to 'More', review, class: "btn btn-sm btn-primary"%>
