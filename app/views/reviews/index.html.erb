<div >
  <h2>Reviews</h2>
  <% @reviews.each do |review| %>
    <p>User: <%= review.user.first %> <%= review.user.last %></p>
    <p>Book: <%= review.book.title %></p>
    <p>Rating: <%= review.rating %> stars</p>
    <p><%= review.review_text %></p>

    <%= link_to 'More', review, class: "btn btn-sm btn-primary more-btn"%>
  <%end%>
  
  <% if current_user != nil %>
   <div class="row">
    <div class="col-2">
      <%= link_to "Leave Review", new_user_review_path(current_user), method: :post, class: "btn btn-info" %>
    </div>
   </div>
  <% end %>

   <div>
    <%= link_to "Users *temporary*", users_path, class: "btn btn-sm btn-primary" %>
    <%= link_to "Books *temporary*", books_path, class: "btn btn-sm btn-primary" %>
  </div>

</div>