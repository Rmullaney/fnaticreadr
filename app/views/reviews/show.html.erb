<div>
  <p><%= @review.user %></p>
  <p><%= @review.book %></p>
  <p><%= @review.rating %></p>
  <p><%= @review.description %></p>

  <%= link_to "Edit", edit_review_path(@review), class: "btn btn-info" %>
  <%= button_to "Delete", @review, method: :delete, class: "btn btn-danger", form: { data: { turbo_confirm: "Are you sure?" } } %>
  <%= link_to "Back to index", reviews_path, class: "btn btn-secondary" %>

</div>