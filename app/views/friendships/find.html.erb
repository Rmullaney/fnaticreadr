<% if flash[:message] %>
    <%= flash[:message] %>
<% end %>

<% if current_user.friends.count == 0 %>
    <p>This user has no friends</p>
<% else %>
    <p><strong>Friends</strong></p><br>
    <% current_user.friends.each do |friend| %>
        <%= render partial: "userInfo", locals: {person: friend} %>
        <%= button_to "Delete this friend", user_friendship_path(current_user.id, friend.id), method: :delete %>
        <br>
    <% end %>
<% end %>

<br><br>

<p class="text-lg font-semibold mb-2">Browse Friends</p>
    <%= form_with url: friendships_find_path, method: :get, local: true, class: "space-y-4" do |form| %>
        <div class="flex flex-col space-y-2">
            <%= form.label :query, "Search by first name", class: "text-sm font-medium text-slate-700" %>
            <%= form.text_field :first_query, value: params[:query], class: "w-1/4 bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-300 rounded-full px-4 py-2 transition duration-300 focus:outline-none focus:ring-2 focus:ring-violet-300 focus:border-violet-300", placeholder: "Search first names..." %>
        </div>

        <div class="flex flex-col space-y-2">
            <%= form.label :query, "Search by last name", class: "text-sm font-medium text-slate-700" %>
            <%= form.text_field :last_query, value: params[:query], class: "w-1/4 bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-300 rounded-full px-4 py-2 transition duration-300 focus:outline-none focus:ring-2 focus:ring-violet-300 focus:border-violet-300", placeholder: "Search last names..." %>
        </div>

        <div class="flex flex-col space-y-2">
            <%= form.label :query, "Search by email", class: "text-sm font-medium text-slate-700" %>
            <%= form.text_field :email_query, value: params[:query], class: "w-1/4 bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-300 rounded-full px-4 py-2 transition duration-300 focus:outline-none focus:ring-2 focus:ring-violet-300 focus:border-violet-300", placeholder: "Search emails..." %>
        </div>

        <div>
            <%= form.submit "Filter Users", class: "w-1/4 bg-violet-500 text-white py-2 px-4 rounded-full text-sm font-medium hover:bg-violet-300 transition duration-300" %>
        </div>

    <% end %>



<br>

<% @users.each do |user| %>
    <% if (user.id != current_user.id && !User.find(current_user.id).friends.exists?(email: user.email)) %>
        <%= render partial: "userInfo", locals: {person: user} %>
        <%= button_to "Click to Add Friend", user_friendships_path(current_user.id), method: :post, params: {friend_id: user.id}%>
        <br>
    <% end %>
<% end %>