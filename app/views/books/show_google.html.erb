<div class="col">
    <% if @book.img_url.present? %>
        <img src="<%= @book.img_url %>" alt="<%= @book.title %>" style="max-width: 300px; height: auto;">
    <% else %>
        <%= image_tag "default_cover.jpg", alt: "Default cover", class: "img-fluid" %>
    <% end %>


    <br>
    <h6> Description: </h6>
    <p class="card-text"> <%= clean_description = ActionView::Base.full_sanitizer.sanitize(@book.description)%> </p>
    <br>
    <h6> Publisher: <%= @book.publisher %> </h6>
    <h6> Published: <%= @book.publish_date %> </h6>
    <h6> ISBN 13: <%= @book.isbn_13 %> </h6>
    <h6> Language: <%= @book.language_written %> </h6>
    <br>

    <%= link_to "Back to index", books_path, class: "btn btn-secondary" %>
    <br>
    <br>

    <%= button_to "Add to Library", add_google_book_path(book: {
        title: @book.title,
        author: @book.author,
        genre: @book.genre,
        description: @book.description,
        publisher: @book.publisher,
        publish_date: @book.publish_date,
        pages: @book.pages,
        language_written: @book.language_written,
        isbn_13: @book.isbn_13,
        img_url: @book.img_url
        
    }), method: :post, class: "btn btn-success" %>

</div>

</div>
